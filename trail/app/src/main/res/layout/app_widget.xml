<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="180dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/rectangle"
    android:alpha="0.7"
    android:padding="@dimen/widget_margin">
    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/add_widget"
            android:background="@drawable/add_widget"
            android:layout_marginLeft="20dp"
            android:layout_width="@dimen/the23"
            android:layout_height="@dimen/the23" />
        <TextView
            android:id="@+id/widget_title"
            android:text="今日任务"
            android:textSize="20sp"
            android:textColor="#fff7f7"
            android:gravity="center"
            android:background="@drawable/textview_line_bg"
            android:layout_marginTop="-1dp"
            android:layout_marginLeft="-1dp"
            android:layout_marginRight="-1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/set_widget"
            android:background="@drawable/setting_widget"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/the23"
            android:layout_height="@dimen/the23" />
    </RelativeLayout>
    <LinearLayout
    android:id="@+id/ll1"
    android:gravity="center"
    android:layout_below="@+id/head"
    android:orientation="horizontal"
    android:layout_width="@dimen/the250"
    android:layout_height="wrap_content">
        <RelativeLayout
        android:gravity="center"
        android:layout_width="@dimen/the250"
        android:layout_height="wrap_content">
        <ImageButton
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:background="@drawable/box"
        android:id="@+id/btn_check0"
        android:layout_width="@dimen/padding"
        android:layout_height="@dimen/padding" />
        <TextView
        android:id="@+id/card_title0"
        android:text="任务一"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/card_title_height"
        android:layout_alignBottom="@+id/card_image"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="#fff7f7" />

        <TextView
        android:id="@+id/card_time0"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/card_title_height"
        android:layout_marginRight="10dp"
        android:text="7月17日"
        android:layout_alignParentRight="true"
        android:textColor="#de356a"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
    android:id="@+id/ll2"
    android:gravity="center"
    android:layout_below="@+id/ll1"
    android:orientation="horizontal"
    android:layout_width="@dimen/the250"
    android:layout_height="wrap_content">
        <RelativeLayout
        android:gravity="center"
        android:layout_width="@dimen/the250"
        android:layout_height="wrap_content">
        <ImageButton
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:background="@drawable/box"
        android:id="@+id/btn_check1"
        android:layout_width="@dimen/padding"
        android:layout_height="@dimen/padding" />
        <TextView
        android:id="@+id/card_title1"
        android:text="任务二"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/card_title_height"
        android:layout_alignBottom="@+id/card_image"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="#fff7f7" />

        <TextView
        android:id="@+id/card_time1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/card_title_height"
        android:layout_marginRight="10dp"
        android:text="7月17日"
        android:layout_alignParentRight="true"
        android:textColor="#de356a"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
    android:id="@+id/ll3"
    android:gravity="center"
    android:layout_below="@+id/ll2"
    android:orientation="horizontal"
    android:layout_width="@dimen/the250"
    android:layout_height="wrap_content">
        <RelativeLayout
        android:gravity="center"
        android:layout_width="@dimen/the250"
        android:layout_height="wrap_content">
        <ImageButton
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:background="@drawable/box"
        android:id="@+id/btn_check2"
        android:layout_width="@dimen/padding"
        android:layout_height="@dimen/padding" />
        <TextView
        android:id="@+id/card_title2"
        android:text="任务三"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/card_title_height"
        android:layout_alignBottom="@+id/card_image"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="#fff7f7" />

        <TextView
        android:id="@+id/card_time2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/card_title_height"
        android:layout_marginRight="10dp"
        android:text="7月17日"
        android:layout_alignParentRight="true"
        android:textColor="#de356a"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
    android:id="@+id/ll4"
    android:gravity="center"
    android:layout_below="@+id/ll3"
    android:orientation="horizontal"
    android:layout_width="@dimen/the250"
    android:layout_height="wrap_content">
        <RelativeLayout
        android:gravity="center"
        android:layout_width="@dimen/the250"
        android:layout_height="wrap_content">
        <ImageButton
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:background="@drawable/box"
        android:id="@+id/btn_check3"
        android:layout_width="@dimen/padding"
        android:layout_height="@dimen/padding" />
        <TextView
        android:id="@+id/card_title3"
        android:text="任务四"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/card_title_height"
        android:layout_alignBottom="@+id/card_image"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="#fff7f7" />

        <TextView
        android:id="@+id/card_time3"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/card_title_height"
        android:layout_marginRight="10dp"
        android:text="7月17日"
        android:layout_alignParentRight="true"
        android:textColor="#de356a"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
    android:id="@+id/ll5"
    android:gravity="center"
    android:layout_below="@+id/ll4"
    android:orientation="horizontal"
    android:layout_width="@dimen/the250"
    android:layout_height="wrap_content">
        <RelativeLayout
        android:gravity="center"
        android:layout_width="@dimen/the250"
        android:layout_height="wrap_content">
        <ImageButton
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:background="@drawable/box"
        android:id="@+id/btn_check4"
        android:layout_width="@dimen/padding"
        android:layout_height="@dimen/padding" />
        <TextView
        android:id="@+id/card_title4"
        android:text="任务五"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/card_title_height"
        android:layout_alignBottom="@+id/card_image"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="#fff7f7" />

        <TextView
        android:id="@+id/card_time4"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/card_title_height"
        android:layout_marginRight="10dp"
        android:text="7月17日"
        android:layout_alignParentRight="true"
        android:textColor="#de356a"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/bottem"
        android:layout_marginTop="5dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/left_widget"
            android:background="@drawable/left_arrow"
            android:layout_marginLeft="10dp"
            android:layout_width="@dimen/padding"
            android:layout_height="@dimen/padding" />
        <TextView
            android:id="@+id/pages"
            android:text="1/1"
            android:textSize="16sp"
            android:textColor="#fff7f7"
            android:gravity="center"
            android:background="@drawable/textview_line_bg"
            android:layout_marginBottom="-1dp"
            android:layout_marginLeft="-1dp"
            android:layout_marginRight="-1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/right"
            android:background="@drawable/right_arrow"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/padding"
            android:layout_height="@dimen/padding" />
    </RelativeLayout>
</RelativeLayout>



