<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Setting.AccountActivity">
    <RelativeLayout
        android:id="@+id/regist_head"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/btn_registBack"
            android:src="@drawable/back"
            android:scaleType="centerInside"
            android:background="@drawable/button_back_bg"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:textColor="@color/mdtp_white"
            android:text="注册"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </RelativeLayout>
    <EditText
        android:id="@+id/et_username"
        android:textSize="16sp"
        android:hint="用户名"
        android:layout_below="@+id/rl_accountTitle"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_height="50dp" />
    <EditText
        android:id="@+id/et_password"
        android:textSize="16sp"
        android:hint="密码"
        android:inputType="textPassword"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <EditText
        android:id="@+id/et_passwordAgain"
        android:textSize="16sp"
        android:hint="重复输入密码"
        android:inputType="textPassword"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="90dp"
        android:layout_below="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <Button
        android:id="@+id/btn_regist"
        android:text="注册"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="330dp"
        android:layout_below="@+id/btn_login"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="70dp" />

</RelativeLayout>