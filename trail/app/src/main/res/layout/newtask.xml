<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="1000dp"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="1000dp">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:gravity="left|center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="30dp"
                android:text="新建事项"
                android:textSize="40sp" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="15px"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@android:color/holo_purple" />

            <TextView
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="时间："
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/time"
                android:layout_width="100dp"
                android:layout_height="400dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="0dp"
                android:checkedButton="@+id/male"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/timepoint"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:text="时刻"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/timeextention"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="90dp"
                    android:text="时段"
                    android:textSize="15sp" />
            </RadioGroup>

            <EditText
                android:id="@+id/Year"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="-370dp"
                android:background="@null"
                android:hint="2019"
                android:inputType="number"
                android:paddingLeft="2dp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="-40dp"
                android:text="年"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/Month"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="-45dp"
                android:background="@null"
                android:hint="10"
                android:inputType="number"
                android:paddingLeft="2dp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="-40dp"
                android:text="月"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/Day"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="-45dp"
                android:background="@null"
                android:hint="30"
                android:inputType="number"
                android:paddingLeft="2dp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="-40dp"
                android:text="日"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/Hour"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:hint="22"
                android:inputType="number"
                android:paddingLeft="2dp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="-40dp"
                android:text="时"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/Minute"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="-45dp"
                android:background="@null"
                android:hint="33"
                android:inputType="number"
                android:paddingLeft="2dp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="-40dp"
                android:text="分"
                android:textSize="20sp" />


            <EditText
                android:id="@+id/BeginYear"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:background="@null"
                android:hint="2019"
                android:inputType="number"
                android:paddingLeft="2dp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="-40dp"
                android:text="年"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/BeginMonth"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="-45dp"
                android:background="@null"
                android:hint="10"
                android:inputType="number"
                android:paddingLeft="2dp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="-40dp"
                android:text="月"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/BeginDay"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="-45dp"
                android:background="@null"
                android:hint="30"
                android:inputType="number"
                android:paddingLeft="2dp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="-40dp"
                android:text="日"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/BeginHour"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:hint="22"
                android:inputType="number"
                android:paddingLeft="2dp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="-45dp"
                android:text="时"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/BeginMinute"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="-40dp"
                android:background="@null"
                android:hint="33"
                android:inputType="number"
                android:paddingLeft="2dp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="-45dp"
                android:text="分"
                android:textSize="20sp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="0dp"
                android:text="至"
                android:textSize="17sp" />


            <EditText
                android:id="@+id/EndYear"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="-0dp"
                android:background="@null"
                android:hint="2019"
                android:inputType="number"
                android:paddingLeft="2dp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="-40dp"
                android:text="年"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/EndMonth"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="-45dp"
                android:background="@null"
                android:hint="10"
                android:inputType="number"
                android:paddingLeft="2dp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="-40dp"
                android:text="月"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/EndDay"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="-45dp"
                android:background="@null"
                android:hint="30"
                android:inputType="number"
                android:paddingLeft="2dp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="-40dp"
                android:text="日"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/EndHour"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:hint="22"
                android:inputType="number"
                android:paddingLeft="2dp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="-40dp"
                android:text="时"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/EndMinute"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="-45dp"
                android:background="@null"
                android:hint="33"
                android:inputType="number"
                android:paddingLeft="2dp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="-40dp"
                android:text="分"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="5px"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@android:color/holo_purple" />

            <TextView
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="重复："
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/recycling"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="-35dp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="5px"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@android:color/holo_purple" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="提前            分钟提醒我"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/AdvanceTime"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="-41dp"
                android:background="@null"
                android:hint="15"
                android:inputType="number"
                android:paddingLeft="2dp"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="5px"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@android:color/holo_purple" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="选择地点(选填)"
                android:textSize="20sp" />

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="-20dp"
                android:background="@drawable/place" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="5px"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@android:color/holo_purple" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="重要度："
                android:textSize="20sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="0dp">
                <RadioButton
                    android:id="@+id/first"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp" />
                <RadioButton
                    android:id="@+id/second"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"/>
                <RadioButton
                    android:id="@+id/third"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:checked="true" />
                <RadioButton
                    android:id="@+id/forth"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"/>
                <RadioButton
                    android:id="@+id/fifth"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"/>
            </RadioGroup>

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="-235dp"
                android:text="加急"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="0dp"
                android:text="重要"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="0dp"
                android:text="一般"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="0dp"
                android:text="不重要"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="0dp"
                android:text="选做"/>

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="5px"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@android:color/holo_purple" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="类别："
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/type"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="-35dp" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="5px"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@android:color/holo_purple" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="标题："
                android:textSize="20sp" />

            <EditText
                android:id="@+id/TaskTital"
                android:layout_width="270dp"
                android:layout_height="35dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="-36dp"
                android:background="@null"
                android:hint="请输入事项标题"
                android:paddingLeft="2dp"
                android:textSize="20sp"
                android:gravity="top"/>

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="5px"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@android:color/holo_purple" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="内容："
                android:textSize="20sp" />

            <EditText
                android:id="@+id/TaskContent"
                android:layout_width="270dp"
                android:layout_height="100dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="-36dp"
                android:background="@null"
                android:hint="请输入事项内容"
                android:paddingLeft="2dp"
                android:textSize="20sp"
                android:gravity="top"/>

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="match_parent"
                android:layout_height="5px"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@android:color/holo_purple" />

            <Button
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="40dp"
                android:text="保存"
                android:textSize="20sp"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>