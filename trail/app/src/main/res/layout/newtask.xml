<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_horizontal"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp">

            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="30dp"
                android:text="新建事项"
                android:textSize="40sp" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="15px"
                android:layout_marginLeft="-200dp"
                android:layout_marginTop="83dp"
                app:srcCompat="@android:color/holo_purple" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_marginLeft="-350dp"
                android:layout_marginTop="1000dp"
                android:text="内容："
                android:textSize="20sp" />

            <EditText
                android:id="@+id/TaskContent"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-20dp"
                android:layout_marginTop="1000dp"
                android:background="@null"
                android:hint="请输入事项内容"
                android:paddingLeft="2dp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:layout_marginLeft="-320dp"
                android:layout_marginTop="85dp"
                android:text="时间："
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/time"
                android:layout_width="100dp"
                android:layout_height="400dp"
                android:layout_marginLeft="-70dp"
                android:layout_marginTop="130dp"
                android:checkedButton="@+id/male"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/timepoint"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="10dp"
                    android:checked="true"
                    android:text="时刻"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/timeextention"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="90dp"
                    android:text="时段"
                    android:textSize="15sp" />
            </RadioGroup>

            <EditText
                android:id="@+id/Year"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-70dp"
                android:layout_marginTop="165dp"
                android:background="@null"
                android:hint="2019"
                android:inputType="number"
                android:paddingLeft="2dp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginLeft="-30dp"
                android:layout_marginTop="165dp"
                android:text="年"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/Month"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="165dp"
                android:background="@null"
                android:hint="10"
                android:inputType="number"
                android:paddingLeft="2dp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginLeft="-30dp"
                android:layout_marginTop="165dp"
                android:text="月"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/Day"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="165dp"
                android:background="@null"
                android:hint="30"
                android:inputType="number"
                android:paddingLeft="2dp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginLeft="-30dp"
                android:layout_marginTop="165dp"
                android:text="日"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/Hour"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-180dp"
                android:layout_marginTop="215dp"
                android:background="@null"
                android:hint="22"
                android:inputType="number"
                android:paddingLeft="2dp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginLeft="-30dp"
                android:layout_marginTop="215dp"
                android:text="时"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/Minute"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="215dp"
                android:background="@null"
                android:hint="33"
                android:inputType="number"
                android:paddingLeft="2dp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginLeft="-30dp"
                android:layout_marginTop="215dp"
                android:text="分"
                android:textSize="20sp" />


            <EditText
                android:id="@+id/BeginYear"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-285dp"
                android:layout_marginTop="295dp"
                android:background="@null"
                android:hint="2019"
                android:inputType="number"
                android:paddingLeft="2dp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginLeft="-30dp"
                android:layout_marginTop="295dp"
                android:text="年"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/BeginMonth"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="295dp"
                android:background="@null"
                android:hint="10"
                android:inputType="number"
                android:paddingLeft="2dp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginLeft="-30dp"
                android:layout_marginTop="295dp"
                android:text="月"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/BeginDay"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="295dp"
                android:background="@null"
                android:hint="30"
                android:inputType="number"
                android:paddingLeft="2dp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginLeft="-30dp"
                android:layout_marginTop="295dp"
                android:text="日"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/BeginHour"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-180dp"
                android:layout_marginTop="345dp"
                android:background="@null"
                android:hint="22"
                android:inputType="number"
                android:paddingLeft="2dp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginLeft="-30dp"
                android:layout_marginTop="345dp"
                android:text="时"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/BeginMinute"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="345dp"
                android:background="@null"
                android:hint="33"
                android:inputType="number"
                android:paddingLeft="2dp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginLeft="-30dp"
                android:layout_marginTop="345dp"
                android:text="分"
                android:textSize="20sp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginLeft="-250dp"
                android:layout_marginTop="375dp"
                android:text="至"
                android:textSize="17sp" />


            <EditText
                android:id="@+id/EndYear"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-60dp"
                android:layout_marginTop="410dp"
                android:background="@null"
                android:hint="2019"
                android:inputType="number"
                android:paddingLeft="2dp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginLeft="-30dp"
                android:layout_marginTop="410dp"
                android:text="年"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/EndMonth"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="410dp"
                android:background="@null"
                android:hint="10"
                android:inputType="number"
                android:paddingLeft="2dp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginLeft="-30dp"
                android:layout_marginTop="410dp"
                android:text="月"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/EndDay"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="410dp"
                android:background="@null"
                android:hint="31"
                android:inputType="number"
                android:paddingLeft="2dp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginLeft="-30dp"
                android:layout_marginTop="410dp"
                android:text="日"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/EndHour"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-180dp"
                android:layout_marginTop="460dp"
                android:background="@null"
                android:hint="22"
                android:inputType="number"
                android:paddingLeft="2dp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginLeft="-30dp"
                android:layout_marginTop="460dp"
                android:text="时"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/EndMinute"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="460dp"
                android:background="@null"
                android:hint="33"
                android:inputType="number"
                android:paddingLeft="2dp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginLeft="-30dp"
                android:layout_marginTop="460dp"
                android:text="分"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="5px"
                android:layout_marginLeft="-320dp"
                android:layout_marginTop="520dp"
                app:srcCompat="@android:color/holo_purple" />

            <TextView
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:layout_marginLeft="-350dp"
                android:layout_marginTop="510dp"
                android:text="重复："
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/recycling"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="-30dp"
                android:layout_marginTop="560dp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="5px"
                android:layout_marginLeft="-205dp"
                android:layout_marginTop="610dp"
                app:srcCompat="@android:color/holo_purple" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginLeft="-350dp"
                android:layout_marginTop="610dp"
                android:text="提前            分钟提醒我"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/AdvanceTime"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-160dp"
                android:layout_marginTop="610dp"
                android:background="@null"
                android:hint="15"
                android:inputType="number"
                android:paddingLeft="2dp"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="5px"
                android:layout_marginLeft="-110dp"
                android:layout_marginTop="680dp"
                app:srcCompat="@android:color/holo_purple" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginLeft="-350dp"
                android:layout_marginTop="680dp"
                android:text="选择地点(选填)"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="690dp"
                android:background="@drawable/place" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="5px"
                android:layout_marginLeft="-350dp"
                android:layout_marginTop="780dp"
                app:srcCompat="@android:color/holo_purple" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginLeft="-350dp"
                android:layout_marginTop="680dp"
                android:text="选择地点(选填)"
                android:textSize="20sp" />





        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>