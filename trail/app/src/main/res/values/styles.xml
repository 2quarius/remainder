<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="LightTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="tabStyle">@style/Widget.MaterialComponents.TabLayout.Colored</item>
        <item name="materialCardViewStyle">@style/Widget.MyApp.MaterialCardView</item>
        <item name="checkedTextViewStyle">@style/Widget.MyApp.TextField</item>
        <!--<item name="buttonStyle">@style/Widget.MyApp.Button</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily" tools:ignore="NewApi">@font/raleway</item>
        <item name="android:font" tools:ignore="NewApi">@font/raleway</item>
        <!--<item name="android:typeface">@font/raleway</item>-->
    </style>
    <style name="NightTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="tabStyle">@style/Widget.MaterialComponents.TabLayout.Colored</item>
        <item name="materialCardViewStyle">@style/Widget.MyApp.MaterialCardView</item>
        <item name="checkedTextViewStyle">@style/Widget.MyApp.TextField</item>
        <item name="buttonStyle">@style/Widget.MyApp.Button</item>
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="colorAccent">@color/colorAccentNight</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:font" tools:ignore="NewApi">@font/raleway</item>
        <!--<item name="android:typeface">@font/raleway</item>-->
    </style>
    <style name="Widget.MyApp.MaterialCardView" parent="Theme.MaterialComponents.Light">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    <style name="Widget.MyApp.TextField" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
        <item name="android:colorEdgeEffect" tools:targetApi="lollipop">@color/inputLine</item>
        <item name="android:bottomLeftRadius">4dp</item>
        <item name="android:bottomRightRadius">4dp</item>
        <item name="android:topLeftRadius">4dp</item>
        <item name="android:topRightRadius">4dp</item>
    </style>
    <style name="Widget.MyApp.Button" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="android:buttonCornerRadius" tools:targetApi="p">50pt</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/inputLine</item>
        <item name="android:textColorHighlight">@color/colorAccent</item>
    </style>
    <style name="FloatingLabelTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="CustomSeekbarStyle" >
        <item name="android:maxHeight">10dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@color/colorAccent</item>
        <item name="android:progressDrawable">@drawable/seekbar_custom_drawable</item>
        <item name="android:minHeight">10dp</item>
    </style>
    <style name="CustomTextView" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="commonListItemStyle">
    </style>

    <style name="sectionHeaderItemStyle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:gravity">left|bottom</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    <style name="myRecyclerViewStyle">
        <!-- NOTE: clipChildren should be false on API level 11 or later -->
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
    </style>
</resources>
