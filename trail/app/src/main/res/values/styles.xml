<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Light.Theme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="tabStyle">@style/Widget.MaterialComponents.TabLayout.Colored</item>
        <item name="materialCardViewStyle">@style/Widget.MyApp.MaterialCardView</item>
        <item name="checkedTextViewStyle">@style/Widget.MyApp.TextField</item>
        <!--<item name="buttonStyle">@style/Widget.MyApp.Button</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily" tools:ignore="NewApi">@font/raleway</item>
        <item name="android:font" tools:ignore="NewApi">@font/raleway</item>
        <!--<item name="android:typeface">@font/raleway</item>-->
    </style>

    <style name="Widget.MyApp.MaterialCardView" parent="Theme.MaterialComponents.Light">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Widget.MyApp.TextField" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
        <item name="android:colorEdgeEffect" tools:targetApi="lollipop">@color/inputLine</item>
        <item name="android:bottomLeftRadius">4dp</item>
        <item name="android:bottomRightRadius">4dp</item>
        <item name="android:topLeftRadius">4dp</item>
        <item name="android:topRightRadius">4dp</item>
    </style>

    <style name="Widget.MyApp.Button" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="android:buttonCornerRadius">50pt</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/inputLine</item>
        <item name="android:textColorHighlight">@color/colorAccent</item>
    </style>

    <style name="FloatingLabelTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CustomSeekbarStyle">
        <item name="android:maxHeight">10dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@color/colorAccent</item>
        <item name="android:progressDrawable">@drawable/seekbar_custom_drawable</item>
        <item name="android:minHeight">10dp</item>
    </style>

    <style name="Light.Theme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Light.Theme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Light.Theme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
